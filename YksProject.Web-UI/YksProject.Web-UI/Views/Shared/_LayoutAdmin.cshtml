<script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.0.0/crypto-js.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.12/signalr.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var secretKey = "SKSecretKey";
        var userName = localStorage.getItem('UserName');
        var bytes = CryptoJS.AES.decrypt(userName, secretKey);
        var decryptedUserName = bytes.toString(CryptoJS.enc.Utf8);

        var kisiImageUrl = localStorage.getItem('KisiImageUrl');

        // Verileri HTML elementlerine yerleştir
        if (decryptedUserName) {
            var userNameElement = document.getElementById('userName');
            if (userNameElement) {
                userNameElement.textContent = decryptedUserName;
            }
        }
        if (kisiImageUrl) {
            var kisiImageUrlElement = document.getElementById('kisiImageUrl');
            if (kisiImageUrlElement) {
                kisiImageUrlElement.src = kisiImageUrl;
            }
        }
    });

    var fullScreen = false;

    document.getElementById('full-view').addEventListener('click', function () {
        if (fullScreen) {
            exitFullscreen();
            fullScreen = false;
        } else {
            if (isFullScreen()) {
                exitFullscreen();
            } else {
                requestFullscreen();
                fullScreen = true;
            }
        }
    });
    function goToLinkforBildirim() {
        window.location.href = "/Admin/BildirimList";
    }
    function goToMessagePage() {
        window.location.href = "/Chat/Index";
    }
    
    function isFullScreen() {
        return (document.fullscreenElement || document.mozFullScreenElement || document.webkitFullscreenElement || document.msFullscreenElement);
    }

    function requestFullscreen() {
        var element = document.documentElement;
        if (element.requestFullscreen) {
            element.requestFullscreen();
        } else if (element.mozRequestFullScreen) {
            element.mozRequestFullScreen();
        } else if (element.webkitRequestFullscreen) {
            element.webkitRequestFullscreen();
        } else if (element.msRequestFullscreen) {
            element.msRequestFullscreen();
        }
    }

    function exitFullscreen() {
        if (document.exitFullscreen) {
            document.exitFullscreen();
        } else if (document.mozCancelFullScreen) {
            document.mozCancelFullScreen();
        } else if (document.webkitExitFullscreen) {
            document.webkitExitFullscreen();
        } else if (document.msExitFullscreen) {
            document.msExitFullscreen();
        }
    }

    const connection = new signalR.HubConnectionBuilder()
        .withUrl("http://localhost:56459/SonKoc-Chat")
        .withAutomaticReconnect()
        .build();

    connection.start()
        .then(() => {
            

            var user = localStorage.getItem('TabloID');
            var tabloID = parseInt(user, 10);
            connectToHub(tabloID);
        })
        .catch(err => {
            console.error("SignalR bağlantı hatası: ", err.toString());
        });



    function connectToHub(tabloID) {
        connection.invoke("Connect", tabloID)
            .catch(err => console.error("Connect fonksiyonunu çağırma hatası: ", err.toString()));
    }

    connection.on("Messages", function (message) {
        console.log("Yeni mesaj geldi:", message);
        newMessage(message);
    });

    connection.on("Users", function (user) {
        
        userStatus(user);
    });


</script>
