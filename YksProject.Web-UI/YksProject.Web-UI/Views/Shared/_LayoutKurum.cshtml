    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var secretKey = "SKSecretKey";
            var userName = localStorage.getItem('UserName');
            var bytes = CryptoJS.AES.decrypt(userName, secretKey);
            var decryptedUserName = bytes.toString(CryptoJS.enc.Utf8);
            var kisiImageUrl = localStorage.getItem('KisiImageUrl');

            // Verileri HTML elementlerine yerleştir
            if (decryptedUserName) {
                var userNameElement = document.getElementById('UserName');
                var userNameDropdownElement = document.getElementById('UserNameDropdown');
                if (userNameElement) {
                    userNameElement.textContent = decryptedUserName;
                }
                if (userNameDropdownElement) {
                    userNameDropdownElement.textContent = decryptedUserName;
                }
            }

            // Image URL null ise varsayılan resim URL'sini kullan
            var defaultImageUrl = "http://localhost:6079/images/Logo.jpg";
            if (!kisiImageUrl || kisiImageUrl.trim() === "") {
                kisiImageUrl = defaultImageUrl;
            }

            var kisiImageUrlElement = document.getElementById('KisiImageUrl');
            var kisiImageUrlDropdownElement = document.getElementById('KisiImageUrlDropdown');
            if (kisiImageUrlElement) {
                kisiImageUrlElement.src = kisiImageUrl;
            }
            if (kisiImageUrlDropdownElement) {
                kisiImageUrlDropdownElement.src = kisiImageUrl;
            }
        });



      
        $("#lineChart").sparkline([102, 109, 120, 99, 110, 105, 115], {
            type: "line",
            height: "70",
            width: "100%",
            lineWidth: "2",
            lineColor: "#177dff",
            fillColor: "rgba(23, 125, 255, 0.14)",
