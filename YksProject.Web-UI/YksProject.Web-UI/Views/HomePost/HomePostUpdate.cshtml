@{
    ViewData["Title"] = "HomePost";
    Layout = "_LayoutAdmin";
    ViewData["PageTitle"] = "HomePost Işlemleri";
    ViewData["PageMainAdresse"] = "/HomePost/HomePostList";
    ViewData["PageMainTitle"] = "HomePost Işlemleri";
    ViewData["PageTwiceTitle"] = "HomePost Güncelle";
}
<h2>HomePost Güncelleme Sayfası </h2>
<br />
<label>Post Sahibi </label>
<input type="text" id="HomePostSahibi" class="form-control" />
<br />
<label>Post Başlığı </label>
<input type="text" id="HomePostAdi" class="form-control" />
<br />
<label>Post Açıklaması </label>
<textarea id="HomePostAciklamasi" class="form-control"></textarea>
<br />
<label> Post Yayında Mı ?</label>
<select id="PostYayindaMi" class="form-control">
    <option value="false">Hayır</option>
    <option value="true">Evet</option>
</select>
<br />
<label>Post Ikonu Şuanki Hali</label>
<br />
<img id="postikon" src="null.png" alt="Şuanki Resim" style="width:350px;">

<br />



<label>Post Ikonu Değiştirmek İstermisin?</label>
<input type="file" id="PostImage" class="form-control" />

<br />
<button class="btn  mb-1 btn-rounded btn-primary" onclick="HomePostGuncelle()">Güncelle</button>
<button class="btn  mb-1 btn-rounded btn-info" onclick="ListelemeyeDon()">Listelemeye Dön</button>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
<script>
    function ListelemeyeDon() {
        location.href = "/HomePost/HomePostList";
    }


</script>

<script src="~/js/homepost/homepostupdate.js"></script>