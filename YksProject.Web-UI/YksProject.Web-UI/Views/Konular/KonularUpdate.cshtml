@{
    ViewData["Title"] = "Konular";
    Layout = "_LayoutAdmin";
    ViewData["PageTitle"] = "Konu Işlemleri";
    ViewData["PageMainAdresse"] = "/Konular/KonularList";
    ViewData["PageMainTitle"] = "Konu Işlemleri";
    ViewData["PageTwiceTitle"] = "Konu Güncelle";
}

<h2>Konu Güncelleme Sayfası </h2>
<br />
<label>Konu Adı </label>
<input type="text" id="KonuAd" class="form-control" />
<br />
<label>Konu İlgili Dersi </label>
<select id="KonuDers" class="form-control">
    <option value="0">Seçiniz</option>
</select>
<br />
<label>Konu Açıklaması</label>
<textarea class="form-control" id="KonuAciklamasi"></textarea>
<br />
<label>Konu Açıklaması Yapan Kişi Adı </label>
<input type="text" id="KonuKisiAdi" class="form-control" />
<br />
<label>Konu Açıklaması Yapan Kişi Rolu </label>
<input type="text" id="KonuKisiRolu" class="form-control" />
<br />
<label>Bölüm 2024 Soru Sayısı </label>
<input type="number" id="Soru2024" class="form-control" />
<br />
<label>Bölüm 2023 Soru Sayısı </label>
<input type="number" id="Soru2023" class="form-control" />
<br />
<label>Bölüm 2022 Soru Sayısı </label>
<input type="number" id="Soru2022" class="form-control" />
<br />
<button class="btn  mb-1 btn-rounded btn-primary" onclick="KonuGuncelle()">Güncelle</button>
<button class="btn  mb-1 btn-rounded btn-info" onclick="ListelemeyeDon()">Listelemeye Dön</button>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
<script>
    function ListelemeyeDon() {
        location.href = "/Konular/KonularList";
    }


</script>
<script src="~/js/konular/konularupdate.js"></script>

